{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "es2019"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noEmit": true,
    "noImplicitReturns": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
